- var destination = ''
if pageInfo.other.destination
  - destination = '?destination=' + pageInfo.other.destination
  
form.form-horizontal(name='userRegister', id='userRegister' ,action='/userregister' + destination, method='post', role='form')
  include ../components/csrf
  .form-group
    label.control-label.col-md-1(for='userEmail') Email
    .col-md-4
      input.form-control(type='email', id='userRegister_userEmail', name='userEmail', placeholder='e.g. name@gmail.com', required)
  .form-group
    label.control-label.col-md-1(for='userPassword') Password
    .col-md-4
      input.form-control(type='password', id='userRegister_userPassword', name='userPassword', placeholder='Password')
  .form-group
    label.control-label.col-md-1(for='userPasswordConf') Confirm Password
    .col-md-4
      input.form-control(type='password', id='userRegister_userPasswordConf', name='userPasswordConf', placeholder='Enter password again')
  .form-group
    .col-md-offset-1.col-md-4
      button.btn.btn-primary(type='submit') Sign me up! 
